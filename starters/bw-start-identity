#!/usr/bin/env bash

ensure_project_ready () {
  if [ ! -d "$HOME/bitwarden/server" ]; then
    bw-build-server
  fi

  if [ ! -d "$HOME/bitwarden/logs" ]; then
    cd $HOME/bitwarden
    mkdir logs
  fi

  rm -f $HOME/bitwarden/logs/bw-identity.log
  touch $HOME/bitwarden/logs/bw-identity.log
}

install_packages () {
  cd $HOME/bitwarden/server/src/Identity
  dotnet clean
  dotnet restore
}

start_container () {
  bw-start-docker-mssql
  bw-start-docker-azurite
  bw-start-docker-mailcatcher
}

start_project () {
  cd $HOME/bitwarden/server/src/Identity
  dotnet run 2>&1 | tee -a $HOME/bitwarden/logs/bw-identity.log
}

start_identity () {
  ensure_project_ready
  #install_packages
  start_container
  start_project
}

start_identity
