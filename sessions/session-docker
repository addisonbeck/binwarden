SUPPORTS_DESTRCUTION=true

PROJECT_NAME="Docker"
PROJECT_PATH="$HOME/bitwarden/server/dev"
SESSION_PREFIX="üõ°Ô∏è"
SESSION_NAME="BW Containers"
